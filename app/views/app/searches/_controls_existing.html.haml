= object_controls do
  %li= link_to "delete", app_user_account_search_path(@account, @search), :method => :delete, :confirm => "Are you sure you want to remove this search?"
  %li= link_to "edit", edit_app_user_account_search_path(@account, @search)
  %li.last
    Clone:
    - form_for(:search, :url => clone_app_user_account_search_path(@account, @search)) do |form|
      = form.text_field :title, :value => "", :id => "clone_title"